<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FoodViewController">
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="950.0">
         <children>
            <FlowPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="487.0" prefWidth="271.0" spacing="10.0" styleClass="tab-pane">
                     <children>
                        <TabPane prefHeight="253.0" prefWidth="330.0" styleClass=".tab" stylesheets="@../main/application.css" tabClosingPolicy="UNAVAILABLE">
                          <tabs>
                            <Tab fx:id="breakfastTab" text="Breakfast">
                              <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="136.0" prefWidth="223.0">
                                       <children>
                                          <TreeView fx:id="breakfastTreeviewID" prefHeight="234.0" prefWidth="271.0" />
                                       </children>
                                    </AnchorPane>
                              </content>
                            </Tab>
                              <Tab fx:id="lunchTab" text="Lunch">
                                 <content>
                                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="136.0" prefWidth="223.0">
                                       <children>
                                          <TreeView fx:id="lunchTreeviewID" prefHeight="234.0" prefWidth="271.0" />
                                       </children>
                                    </AnchorPane>
                                 </content>
                              </Tab>
                              <Tab fx:id="dinnerTab" text="Dinner">
                                 <content>
                                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="136.0" prefWidth="223.0">
                                       <children>
                                          <TreeView fx:id="dinnerTreeviewID" prefHeight="234.0" prefWidth="271.0" />
                                       </children>
                                    </AnchorPane>
                                 </content>
                              </Tab>
                          </tabs>
                        </TabPane>
                        <ListView fx:id="insertedItemsList" prefHeight="229.0" prefWidth="271.0">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </ListView>
                     </children>
                  </VBox>
               </children>
            </FlowPane>
            <HBox layoutX="271.0" prefHeight="30.0" prefWidth="502.0">
               <children>
                  <ButtonBar prefHeight="30.0" prefWidth="502.0" style="-fx-background-color: #3A506B;">
                    <buttons>
                      <Button fx:id="previousDayButton" mnemonicParsing="false" onAction="#previousDayButtonClick" styleClass="generalButton" text="Previous" />
                        <Label fx:id="dateTextField" minWidth="72.0" prefHeight="18.0" prefWidth="130.0" text="Date" />
                        <Button fx:id="nextDayButton" layoutX="122.0" layoutY="12.0" mnemonicParsing="false" onAction="#nextDayButtonClick" styleClass="generalButton" text="Next" />
                        <Button fx:id="drawGraphs" layoutX="202.0" layoutY="12.0" mnemonicParsing="false" onAction="#drawGraphMethod" prefHeight="26.0" prefWidth="111.0" styleClass="generalButton" text="Draw Graph" />
                    </buttons>
                  </ButtonBar>
               </children>
            </HBox>
            <BarChart fx:id="barChartOne" layoutX="272.0" layoutY="55.0" prefHeight="431.0" prefWidth="500.0">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
